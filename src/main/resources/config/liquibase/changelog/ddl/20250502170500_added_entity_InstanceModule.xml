<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  
  <changeSet id="20250502170500-1" author="pagopaCruscotto" context="ddl">
    <createSequence sequenceName="SQ${project_name}_ISMO01" startValue="3000" cacheSize="20"/>
  </changeSet>
  
  <changeSet id="20250502170500-2" author="pagopaCruscotto" context="ddl">
    <createTable tableName="INSTANCE_MODULE">
 	  <column name="CO_ID" type="bigint">
        <constraints primaryKey="true" nullable="false" primaryKeyName="IP${project_name}_ISMO02"/>
      </column>
      <column name="CO_INSTANCE_ID" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="CO_MODULE_ID" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="TE_MODULE_CODE" type="varchar(50)">
        <constraints nullable="false"/>
      </column>      
      <column name="TE_ANALYSIS_TYPE" type="varchar(35)">
        <constraints nullable="false"/>
      </column>
      <column name="FL_ALLOW_MANUAL_OUTCOME" type="boolean">
        <constraints nullable="false"/>
      </column>
      <column name="DT_ANALISYS_DATE" type="datetime">
        <constraints nullable="true"/>
