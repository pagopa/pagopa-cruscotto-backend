	  </column>
	  <column name="TE_OUTCOME" type="varchar(10)">
		<constraints nullable="false"/>
	  </column>
	</createTable>
	<rollback>
	  DROP TABLE ${database.defaultSchemaName}.KPI_B3_RESULT CASCADE CONSTRAINTS;
	</rollback>
  </changeSet>

  <changeSet id="20250924120000-3" author="system" context="ddl">
	<createIndex indexName="IX${project_name}_KPIB3RESU"
				 tableName="KPI_B3_RESULT">
