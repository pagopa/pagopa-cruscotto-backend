<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-kpi-a1-analytic-drilldown-table" author="system">
        <createTable tableName="kpi_a1_analytic_drilldown">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="kpi_a1_analytic_data_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="from_hour" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="to_hour" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="total_requests" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="ok_requests" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="average_time_ms" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint 
            baseTableName="kpi_a1_analytic_drilldown"
            baseColumnNames="kpi_a1_analytic_data_id"
            referencedTableName="kpi_a1_analytic_data"
            referencedColumnNames="id"
            constraintName="fk_kpi_a1_analytic_drilldown_analytic_data"/>
        <createIndex 
            tableName="kpi_a1_analytic_drilldown" 
            indexName="idx_kpi_a1_analytic_data_id">
            <column name="kpi_a1_analytic_data_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
