<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <changeSet id="20251006120001-1" author="system" context="ddl">
	<createSequence sequenceName="SQ${project_name}_KPIB4DETARESU" startValue="3000" cacheSize="20"/>
  </changeSet>

  <changeSet id="20251006120001-2" author="system" context="ddl">
	<createTable tableName="KPI_B4_DETAIL_RESULT">
 	  <column name="CO_ID" type="bigint">
		<constraints primaryKey="true" nullable="false" primaryKeyName="PK${project_name}_KPIB4DETARESU"/>
	  </column>
	  <column name="CO_INSTANCE_ID" type="bigint">
		<constraints nullable="false"/>
	  </column>
	  <column name="CO_INSTANCE_MODULE_ID" type="bigint">
		<constraints nullable="false"/>
	  </column>
	  <column name="CO_ANAG_STATION_ID" type="bigint">
		<constraints nullable="false"/>
	  </column>
	  <column name="DT_ANALISYS_DATE" type="date">
		<constraints nullable="false"/>
	  </column>
	  <column name="TE_EVALUATION_TYPE" type="varchar(50)">
		<constraints nullable="false"/>
	  </column>
	  <column name="DT_EVALUATION_START_DATE" type="date">
		<constraints nullable="false"/>
	  </column>
	  <column name="DT_EVALUATION_END_DATE" type="date">
		<constraints nullable="false"/>
	  </column>
	  <column name="CO_SUM_TOT_GPD" type="bigint">
		<constraints nullable="true"/>
	  </column>
	  <column name="CO_SUM_TOT_CP" type="bigint">
		<constraints nullable="true"/>
	  </column>
	  <column name="CO_PER_API_CP" type="decimal(5,2)">
		<constraints nullable="true"/>
	  </column>
	  <column name="TE_OUTCOME" type="varchar(10)">
		<constraints nullable="true"/>
	  </column>
	  <column name="CO_KPI_B4_RESULT_ID" type="bigint">
		<constraints nullable="true"/>
	  </column>
	</createTable>
	<rollback>
	  DROP TABLE ${database.defaultSchemaName}.KPI_B4_DETAIL_RESULT CASCADE CONSTRAINTS;
	</rollback>
  </changeSet>

  <changeSet id="20251006120001-3" author="system" context="ddl">
	<createIndex indexName="IX${project_name}_KPIB4DETARESU_INST"
				 tableName="KPI_B4_DETAIL_RESULT">
	  <column name="CO_INSTANCE_MODULE_ID"/>
	</createIndex>
  </changeSet>

  <changeSet id="20251006120001-4" author="system" context="ddl">
	<createIndex indexName="IX${project_name}_KPIB4DETARESU_STAT"
				 tableName="KPI_B4_DETAIL_RESULT">
	  <column name="CO_ANAG_STATION_ID"/>
	</createIndex>
  </changeSet>

</databaseChangeLog>