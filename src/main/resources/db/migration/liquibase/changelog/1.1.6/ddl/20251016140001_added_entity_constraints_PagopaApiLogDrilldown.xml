<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity constraints for PagopaApiLogDrilldown.
    -->
    <changeSet id="20251016140001-1" author="system">
        <!-- Add sequence for primary key -->
        <createSequence sequenceName="SQCRUSC8_PAGOPAAPILOGDRILL" startValue="1" incrementBy="1"/>
        
        <!-- Add foreign key constraints -->
        <addForeignKeyConstraint baseColumnNames="CO_INSTANCE_ID"
                                 baseTableName="PAGOPA_API_LOG_DRILLDOWN"
                                 constraintName="FK_PAGOPA_API_LOG_DRILL_INSTANCE_ID"
                                 referencedColumnNames="CO_ID"
                                 referencedTableName="INSTANCE"/>

        <addForeignKeyConstraint baseColumnNames="CO_INSTANCE_MODULE_ID"
                                 baseTableName="PAGOPA_API_LOG_DRILLDOWN"
                                 constraintName="FK_PAGOPA_API_LOG_DRILL_INSTANCE_MODULE_ID"
                                 referencedColumnNames="CO_ID"
                                 referencedTableName="INSTANCE_MODULE"/>

        <addForeignKeyConstraint baseColumnNames="CO_STATION_ID"
                                 baseTableName="PAGOPA_API_LOG_DRILLDOWN"
                                 constraintName="FK_PAGOPA_API_LOG_DRILL_STATION_ID"
                                 referencedColumnNames="CO_ID"
                                 referencedTableName="ANAG_STATION"/>

        <addForeignKeyConstraint baseColumnNames="CO_KPI_B4_ANALYTIC_DATA_ID"
                                 baseTableName="PAGOPA_API_LOG_DRILLDOWN"
                                 constraintName="FK_PAGOPA_API_LOG_DRILL_KPI_B4_ANALYTIC_DATA_ID"
                                 referencedColumnNames="CO_ID"
                                 referencedTableName="KPI_B4_ANALYTIC_DATA"/>

        <!-- Add indexes for performance -->
        <createIndex indexName="IDX_PAGOPA_API_LOG_DRILL_ANALYSIS_DATE" tableName="PAGOPA_API_LOG_DRILLDOWN">
            <column name="DT_ANALYSIS_DATE"/>
        </createIndex>

        <createIndex indexName="IDX_PAGOPA_API_LOG_DRILL_DATA_DATE" tableName="PAGOPA_API_LOG_DRILLDOWN">
            <column name="DT_DATA_DATE"/>
        </createIndex>

        <createIndex indexName="IDX_PAGOPA_API_LOG_DRILL_PARTNER_FC" tableName="PAGOPA_API_LOG_DRILLDOWN">
            <column name="TE_PARTNER_FISCAL_CODE"/>
        </createIndex>

        <createIndex indexName="IDX_PAGOPA_API_LOG_DRILL_STATION_CODE" tableName="PAGOPA_API_LOG_DRILLDOWN">
            <column name="TE_STATION_CODE"/>
        </createIndex>

        <createIndex indexName="IDX_PAGOPA_API_LOG_DRILL_API" tableName="PAGOPA_API_LOG_DRILLDOWN">
            <column name="TE_API"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>