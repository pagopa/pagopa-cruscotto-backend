<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <changeSet id="20251006120002-1" author="system" context="ddl">
	<createSequence sequenceName="SQ${project_name}_KPIB4ANALDATA" startValue="3000" cacheSize="20"/>
  </changeSet>

  <changeSet id="20251006120002-2" author="system" context="ddl">
	<createTable tableName="KPI_B4_ANALYTIC_DATA">
 	  <column name="CO_ID" type="bigint">
		<constraints primaryKey="true" nullable="false" primaryKeyName="PK${project_name}_KPIB4ANALDATA"/>
	  </column>
	  <column name="TE_INSTANCE_ID" type="bigint">
		<constraints nullable="false"/>
	  </column>
	  <column name="CO_KPI_B4_DETAIL_RESULT_ID" type="bigint">
		<constraints nullable="true"/>
	  </column>
	  <column name="DT_ANALYSIS_DATE" type="date">
		<constraints nullable="false"/>
	  </column>
	  <column name="DT_EVALUATION_DATE" type="date">
		<constraints nullable="false"/>
	  </column>
	  <column name="TE_API_TYPE" type="varchar(100)">
		<constraints nullable="false"/>
	  </column>
	  <column name="CO_REQUEST_COUNT" type="bigint">
		<constraints nullable="false"/>
	  </column>
	</createTable>
	<rollback>
	  DROP TABLE ${database.defaultSchemaName}.KPI_B4_ANALYTIC_DATA CASCADE CONSTRAINTS;
	</rollback>
  </changeSet>

  <changeSet id="20251006120002-3" author="system" context="ddl">
	<createIndex indexName="IX${project_name}_KPIB4ANALDATA_INST"
				 tableName="KPI_B4_ANALYTIC_DATA">
	  <column name="TE_INSTANCE_ID"/>
	</createIndex>
  </changeSet>

  <changeSet id="20251006120002-4" author="system" context="ddl">
	<createIndex indexName="IX${project_name}_KPIB4ANALDATA_DATE"
				 tableName="KPI_B4_ANALYTIC_DATA">
	  <column name="DT_ANALYSIS_DATE"/>
	</createIndex>
  </changeSet>

  <changeSet id="20251006120002-5" author="system" context="ddl">
	<createIndex indexName="IX${project_name}_KPIB4ANALDATA_DETA"
				 tableName="KPI_B4_ANALYTIC_DATA">
	  <column name="CO_KPI_B4_DETAIL_RESULT_ID"/>
	</createIndex>
  </changeSet>

  <changeSet id="20251006120002-6" author="system" context="ddl">
	<createIndex indexName="IX${project_name}_KPIB4ANALDATA_API"
				 tableName="KPI_B4_ANALYTIC_DATA">
	  <column name="TE_API_TYPE"/>
	</createIndex>
  </changeSet>

</databaseChangeLog>