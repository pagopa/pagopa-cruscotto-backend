<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <!-- Step 1: Create Sequence -->
  <changeSet id="20251023180500-1" author="system" context="ddl">
    <createSequence sequenceName="SQ${project_name}_KPIB6DETARESU" startValue="3000" cacheSize="20"/>
  </changeSet>

  <!-- Step 2: Create Table -->
  <changeSet id="20251023180500-2" author="system" context="ddl">
    <createTable tableName="KPI_B6_DETAIL_RESULT">
      <column name="CO_ID" type="bigint">
        <constraints primaryKey="true" nullable="false" primaryKeyName="PK${project_name}_KPIB6DETARESU"/>
      </column>
      <column name="CO_INSTANCE_ID" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="CO_INSTANCE_MODULE_ID" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="CO_KPI_B6_RESULT_ID" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="DT_ANALISYS_DATE" type="date">
        <constraints nullable="false"/>
      </column>
      <column name="TE_EVALUATION_TYPE" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
      <column name="DT_EVALUATION_START_DATE" type="date">
        <constraints nullable="false"/>
      </column>
      <column name="DT_EVALUATION_END_DATE" type="date">
        <constraints nullable="false"/>
      </column>
      <column name="CO_ACTIVE_STATIONS" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="CO_STATIONS_WITH_PAYMENT_OPTIONS" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="DE_COMPLIANCE_PERCENTAGE" type="numeric(5,2)">
        <constraints nullable="false"/>
      </column>
      <column name="CO_STATION_DIFFERENCE" type="integer">
        <constraints nullable="true"/>
      </column>
      <column name="DE_STATION_DIFFERENCE_PERCENTAGE" type="numeric(5,2)">
        <constraints nullable="true"/>
      </column>
      <column name="TE_OUTCOME" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <!-- Step 3: Add foreign key constraints -->
  <changeSet id="20251023180500-3" author="system" context="ddl">
    <addForeignKeyConstraint
      baseTableName="KPI_B6_DETAIL_RESULT"
      baseColumnNames="CO_INSTANCE_ID"
      constraintName="FK${project_name}_KPIB6DETARESU_INST"
      referencedTableName="INSTANCE"
      referencedColumnNames="CO_ID"/>
  </changeSet>

  <changeSet id="20251023180500-4" author="system" context="ddl">
    <addForeignKeyConstraint
      baseTableName="KPI_B6_DETAIL_RESULT"
      baseColumnNames="CO_INSTANCE_MODULE_ID"
      constraintName="FK${project_name}_KPIB6DETARESU_INSTMOD"
      referencedTableName="INSTANCE_MODULE"
      referencedColumnNames="CO_ID"/>
  </changeSet>

  <changeSet id="20251023180500-5" author="system" context="ddl">
    <addForeignKeyConstraint
      baseTableName="KPI_B6_DETAIL_RESULT"
      baseColumnNames="CO_KPI_B6_RESULT_ID"
      constraintName="FK${project_name}_KPIB6DETARESU_KPIB6RESU"
      referencedTableName="KPI_B6_RESULT"
      referencedColumnNames="CO_ID"/>
