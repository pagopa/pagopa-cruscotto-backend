<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="20250903-01" author="system">
        <comment>Create table kpi_a2_analytic_incorrect_taxonomy_data</comment>
        <createSequence sequenceName="SQCRUSC8_KPIA2ANALINCTAXDATA"/>
        <createTable tableName="kpi_a2_analytic_incorrect_taxonomy_data">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="kpi_a2_analytic_data_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="transfer_category" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="total" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="from_hour" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="end_hour" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createIndex indexName="IX${project_name}_KPIA2ANALINCTAXDATA_01" tableName="kpi_a2_analytic_incorrect_taxonomy_data">
            <column name="kpi_a2_analytic_data_id"/>
        </createIndex>
    <addForeignKeyConstraint baseTableName="kpi_a2_analytic_incorrect_taxonomy_data"
                baseColumnNames="kpi_a2_analytic_data_id"
                constraintName="FK_TB${project_name}_KPIA2ANALINCTAXDATA_TB${project_name}_KPIA2ANADATA"
                referencedTableName="kpi_a2_analytic_data"
                referencedColumnNames="co_id"/>
        <rollback>
            <dropTable tableName="kpi_a2_analytic_incorrect_taxonomy_data"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
