<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <!-- Creazione tabella PAGOPA_SPONTANEI con IDENTITY -->
  <changeSet id="20251006155800-1" author="system" context="ddl">
    <createTable tableName="PAGOPA_VOLUNTARY">
      <column name="ID" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" primaryKeyName="PK${project_name}_PAGOSPONT"/>
      </column>
      <column name="PARTNER" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="ENTITY" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="VOLUNTARY_PAYMENT" type="boolean">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <rollback>
      DROP TABLE ${database.defaultSchemaName}.PAGOPA_SPONTANEI CASCADE CONSTRAINTS;
    </rollback>
  </changeSet>

  <!-- Indice su PARTNER e ENTITY -->
  <changeSet id="20251006155800-2" author="system" context="ddl">
    <createIndex indexName="IX${project_name}_PAGOSPONT" tableName="PAGOPA_SPONTANEI">
      <column name="PARTNER"/>
      <column name="ENTITY"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>
