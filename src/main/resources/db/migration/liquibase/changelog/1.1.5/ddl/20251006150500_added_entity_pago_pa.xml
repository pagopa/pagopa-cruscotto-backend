<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <!-- ChangeSet per la creazione della sequenza -->
  <changeSet id="20251006150500-1" author="system" context="ddl">
    <createSequence sequenceName="SQ${project_name}_PAGOPAIO" startValue="1" cacheSize="20"/>
  </changeSet>

  <!-- ChangeSet per la creazione della tabella PAGOPA_IO -->
  <changeSet id="20251006150500-2" author="system" context="ddl">
    <createTable tableName="PAGOPA_IO">
      <column name="CO_ID" type="bigint">
        <constraints primaryKey="true" nullable="false" primaryKeyName="PK${project_name}_PAGOPAIO"/>
      </column>
      <column name="TE_PARTNER" type="char(35)">
        <constraints nullable="false"/>
      </column>
      <column name="TE_ENTE" type="char(35)">
        <constraints nullable="false"/>
      </column>
      <column name="DT_DATA" type="date">
        <constraints nullable="false"/>
      </column>
      <column name="CO_NUMERO_POSIZIONI" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="CO_NUMERO_MESSAGGI" type="bigint">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <rollback>
      DROP TABLE ${database.defaultSchemaName}.PAGOPA_IO CASCADE CONSTRAINTS;
    </rollback>
  </changeSet>

  <!-- ChangeSet per un eventuale indice su ENTE -->
  <changeSet id="20251006150500-3" author="system" context="ddl">
    <createIndex indexName="IX${project_name}_PAGOPAIO" tableName="PAGOPA_IO">
      <column name="TE_PARTNER"/>
      <column name="TE_ENTE"/>
      <column name="DT_DATA"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>
