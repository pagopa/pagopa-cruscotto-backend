                                     constraintName="FK_TB${project_name}_KPIB9DETRES_TB${project_name}_STATION"
                                     referencedColumnNames="CO_ID"
                                     referencedTableName="ANAG_STATION"/>
        </rollback>
    </changeSet>

</databaseChangeLog>